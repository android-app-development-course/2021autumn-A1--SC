<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.textbottonnav">
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ico_logo_1"
        android:label="校园集市"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/ico_logo_1"
        android:supportsRtl="true"
        android:theme="@style/Theme.TextBottonNav">
<!--        进入动画-->
        <activity
            android:name=".WaveIcon"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CollectActivity"
            android:exported="true" />
        <activity
            android:name=".OrderListActivity"
            android:exported="true" />
        <activity
            android:name=".UserInfoDetails"
            android:exported="true" />
        <activity
            android:name=".ForgetpsdFragment"
            android:exported="true" />
        <activity
            android:name=".LoginMobileFragment"
            android:exported="true" /> <!-- 主界面 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="校园集市">

            <!-- enable the search dialog to send searches to SearchableActivity -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchableActivity" />
        </activity> <!-- 登陆 -->
        <activity
            android:name=".LoginFragment"
            android:exported="true"
            android:label="校园集市">

        </activity> <!-- 注册 -->
        <activity
            android:name=".RegisterFragment"
            android:exported="true"
            android:label="注册" /> <!-- 发布商品 -->
        <activity
            android:name=".SendActivity"
            android:exported="true"
            android:label="" /> <!-- 搜索 -->
        <activity
            android:name=".SearchableActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity> <!-- 商品详情 -->
        <activity
            android:name=".GoodDetailFragment"
            android:exported="true" /> <!-- 选择发布类型 -->
        <activity
            android:name=".SelectSendTypeFragment"
            android:exported="true" /> <!-- 发布失物 -->
        <activity
            android:name=".SendShiWuFragment"
            android:exported="true" /> <!-- 订单详情 -->
        <activity
            android:name=".OrderActivity"
            android:exported="true" /> <!-- Bomb后端云配置ContentProvider -->
        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.example.textbottonnav.BmobContentProvider"
            android:exported="true"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files_paths" />
        </provider>
    </application>

</manifest>